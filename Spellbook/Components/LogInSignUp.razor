
<form>
    <input type="text" placeholder="Username, Email or Phone Number">
    <div class="password-container">
        <input type=@inputTypeToggle placeholder="Password">
        <button @onclick="toggle" @onclick:preventDefault="true">
            @if(inputTypeToggle == "password")
{
                    <Spellbook.wwwroot.Icons.EyeSlash/>
                }
                else
{
                    <Spellbook.wwwroot.Icons.Eye/>
}
        </button>
    </div>
    <div class="remember-container">
        <label for="Remember">
            <input type="checkbox" id="Remember" />
            Remember me
        </label>
        <a href="#">Forgot Password?</a>
    </div>
    <button class="login-btn" type="submit">Log In</button>
</form>

@code {
    string inputTypeToggle = "password";

    
    public void toggle()
    {
        if (inputTypeToggle == "password")
            inputTypeToggle = "text";
        else
            inputTypeToggle = "password";
    }

}

